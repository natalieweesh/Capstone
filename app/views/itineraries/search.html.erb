<h2>RESTless itinerary search results</h2>
<% if @search_results.nil? || @search_results.empty? %>
  <p>no results found :(</p>

<% else %>
<ul>
<% @search_results.each do |result| %>
<li>
<%= link_to result.description, itinerary_url(result.id) %>
  <small>(<%= result.time %>)</small>
  <ul>
    <% result.activities.each do |activity| %>
    <li><%= link_to activity.description, activity_url(activity.id) %></li>
    <ul>
      <li><%= activity.venue %></li>
      <li><%= activity.neighborhood %></li>

      <ul>
        <% activity.tags.each do |tag| %>
        <li>
          <%= tag.name %>
        </li>      
        <% end %>
      </ul>
    </ul>
    <% end %>
  </ul>
</li>
<% end %>

</ul>


<% end %>