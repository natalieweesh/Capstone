
<form class="favorite-form">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" id="itin-id" name="favorite[itinerary_id]" value="<%= @itinerary.id %>">

  
  <div class="favorite-buttons
    <% if current_user.favorite_itinerary_ids.include?(@itinerary.id) %>
    favorited
    <% end %>
  ">
    <input class="favorite-button" type="submit" value="favorite this itinerary">
    <input class="unfavorite-button" type="submit" value="unfavorite this itinerary">
    
    
  </div>
  
</form>

<li class="itinerary-description-blob">
  <h3 class="itinerary-title"><%= @itinerary.description %></h3>
</li>

<li class="time-blob">
  <small>(<%= @itinerary.time %>)</small>
</li>

<li class="activity-group group">

    <% @itinerary.activities.each do |activity| %>
  <ul class="activity-blob">
    <li class="activity-title"><%= link_to activity.description, activity_url(activity.id) %></li>
    <ul>
      <li>@ <%= activity.venue %></li>
      <li>[<%= activity.address %>]</li>
      <li>#<%= activity.tags.map{|tag| tag.name}.join(" #") %></li>
    </ul>
  </ul>
    <% end %>
    

</li>


<script>

$('.favorite-form').on("click", 'input[type="submit"]', function(event) {
  event.preventDefault()
  var that = $(this);
  if ($(this).attr('class') === "unfavorite-button") {

  if ($(this).attr('id')) {
    var id = $(this).attr('id');
  } else {
    var id = <%= @favorite_id %>
  }
  $.ajax({
    
    url: "/favorites/" + id + ".json",
    type: "DELETE",
    success: function(response) {
      $(that).parent().toggleClass('favorited');
    }
  });


  } else if ($(this).attr('class') === 'favorite-button') {
      $.ajax({
        url: "<%= favorites_url %>" + ".json",
        type: "POST",
        data: {"favorite": {"itinerary_id": <%= @itinerary.id %>}},
        success: function(response) {
          $(that).parent().toggleClass('favorited');
          $('.unfavorite-button').attr('id', response.id);
        }
      });
    
  }
});

</script>